<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="eventhub" class="com.axaim.emp.logstash.EventHubAppender">
        <applicationTrigram>arc</applicationTrigram>
        <applicationName>Axaim.Membership.Service</applicationName>
        <applicationLayer>lifetest</applicationLayer>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.microsoft.cse.eventhubemulator" level="debug">
        <appender-ref ref="eventhub"/>
    </logger>
</configuration>